# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.

# Read `man 5 sway` for a complete reference.

include base/theme
include outputs
include floating
include wallpaper

# other configs
font pango: WorkSans Regular 12

gaps inner 10px
gaps outer 2px

corner_radius 5

# set sway cursor
seat seat0 xcursor_theme breeze_cursors 24

# inputs:
# disable mouse acceleration
input "type:pointer" accel_profile flat
mouse_warping none

# trackpad/touchpad settings
input type:touchpad {
	tap enabled
	accel_profile flat
	natural_scroll enabled
	scroll_factor 0.2
	drag_lock enabled
}

# disable window titlebar
default_border pixel 2

focus_on_window_activation focus

# autostart app
exec swaync
exec swaybg
exec wl-paste --watch cliphist store
exec gtk-update-icon-cache  # allow wofi to get app icon
exec easyeffects --gapplication-service
exec /usr/lib/polkit-kde-authentication-agent-1
exec kwalletd6
exec_always autotiling

# You can get the names of your outputs by running: swaymsg -t get_outputs
# output eDP-2 resolution 2560x1600 position 0,0
# output eDP-2 scale 1.5

# Macbook Air 2020 edid virtual display
# output DP-3 resolution 2560x1600 position -1707,0
# output HDMI-A-1 resolution 2560x1600 position -1707,0

# output DP-3 disable
# output HDMI-A-1 disable

### Idle configuration
 exec swayidle -w \
          timeout 600 'swaylock --grace 10 -f -C ~/.config/swaylock/mocha.conf --clock --indicator --datestr '%d-%m-%Y'' \
          timeout 700 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
          before-sleep 'swaylock -f -C ~/.config/swaylock/mocha.conf --clock --indicator --datestr '%d-%m-%Y''
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.


#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
	swaybar_command waybar
}

include /etc/sway/config.d/*
